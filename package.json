{
  "name": "fschoenfeldt-website",
  "version": "1.0.0",
  "description": "Frederik Sch√∂nfeldt Website",
  "scripts": {
    "clean": "del _site",
    "watch-css": "npx tailwindcss --postcss -i ./assets/css/styles.css -o ./_site/css/styles.css -w",
    "watch-js": "npx esbuild ./assets/js/app.js ./assets/js/app_vacation.js ./assets/js/app_manager.js --outdir=./_site/js/ --bundle --target=es2018 --watch",
    "start": "NODE_ENV=development concurrently \"node hash\"  \"ELEVENTY_ENV=development eleventy --serve\"  \"npm:watch-*\"",
    "start:e2e": "NODE_ENV=development concurrently \"node hash\"  \"ELEVENTY_ENV=development eleventy --serve --port 8081\"  \"npm:watch-*\"",
    "build-css": "npx tailwindcss --postcss -i ./assets/css/styles.css -o ./_site/css/styles.css --minify",
    "build-js": "npx esbuild ./assets/js/app.js ./assets/js/app_vacation.js ./assets/js/app_manager.js --outdir=./_site/js/ --bundle --target=es2018 --minify",
    "prebuild": "NODE_ENV=production npx playwright test ./tests/cv.print.spec.ts && npm run clean",
    "build": "NODE_ENV=production concurrently \"npm:build-*\"",
    "postbuild": "node hash && ELEVENTY_ENV=production eleventy",
    "test:unit": "npx playwright test -c assets/js/",
    "test:e2e": "npx playwright test",
    "test": "pnpm test:unit && pnpm test:e2e"
  },
  "keywords": [
    "eleventy",
    "starter",
    "TailwindCSS",
    "Alpine.js"
  ],
  "author": "Yann Haefliger<hello@needbrainz.com>",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-upgrade-help": "^2.0.5",
    "@axe-core/playwright": "4.7.1",
    "@playwright/test": "1.34.3",
    "@tailwindcss/typography": "^0.5.9",
    "alpinejs": "^3.12.1",
    "autoprefixer": "^10.4.14",
    "chart.js": "^4.3.0",
    "concurrently": "8.0.1",
    "del-cli": "^5.0.0",
    "eleventy-plugin-sharp": "^0.1.1",
    "esbuild": "0.17.19",
    "html-minifier": "^4.0.0",
    "md5": "^2.3.0",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3.3.2",
    "vanilla-cookieconsent": "2.9.1",
    "debounce": "^1.2.1"
  },
  "dependencies": {}
}
