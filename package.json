{
  "name": "fschoenfeldt-website",
  "version": "1.0.0",
  "description": "Frederik Sch√∂nfeldt Website",
  "scripts": {
    "clean": "del _site",
    "watch-css": "npx tailwindcss --postcss -i ./assets/css/styles.css -o ./_site/css/styles.css -w",
    "watch-js": "npx esbuild ./assets/js/app.js ./assets/js/app_vacation.js ./assets/js/app_manager.js --outdir=./_site/js/ --bundle --target=es2018 --watch",
    "start": "NODE_ENV=development concurrently \"node hash\"  \"ELEVENTY_ENV=development eleventy --serve\"  \"npm:watch-*\"",
    "start:e2e": "NODE_ENV=development concurrently \"node hash\"  \"ELEVENTY_ENV=development eleventy --serve --port 8081\"  \"npm:watch-*\"",
    "build-css": "npx tailwindcss --postcss -i ./assets/css/styles.css -o ./_site/css/styles.css --minify",
    "build-js": "npx esbuild ./assets/js/app.js ./assets/js/app_vacation.js ./assets/js/app_manager.js --outdir=./_site/js/ --bundle --target=es2018 --minify",
    "build": "NODE_ENV=production concurrently \"npm:test --testNamePattern print\" \"npm:build-*\" && node hash && ELEVENTY_ENV=production eleventy",
    "test": "npx playwright test"
  },
  "keywords": [
    "eleventy",
    "starter",
    "TailwindCSS",
    "Alpine.js"
  ],
  "author": "Yann Haefliger<hello@needbrainz.com>",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-upgrade-help": "^1.0.1",
    "@axe-core/playwright": "^4.5.1",
    "@playwright/test": "^1.27.1",
    "@tailwindcss/typography": "^0.5.8",
    "alpinejs": "^3.10.5",
    "autoprefixer": "^10.4.13",
    "chart.js": "^3.9.1",
    "concurrently": "^7.5.0",
    "del-cli": "^5.0.0",
    "eleventy-plugin-sharp": "^0.1.1",
    "esbuild": "^0.15.13",
    "html-minifier": "^4.0.0",
    "md5": "^2.3.0",
    "postcss": "^8.4.19",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.4",
    "vanilla-cookieconsent": "^2.8.8"
  },
  "dependencies": {
    "debounce": "^1.2.1"
  }
}
